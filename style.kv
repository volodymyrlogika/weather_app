<WeatherCard>:
    padding: 4
    size_hint: 0.95, 1

    MDBoxLayout:
        orientation: 'vertical'
        pos_hint:  {"center_y":0.5}
        padding: "20sp"
        size_hint: (0.9, 0.9)
        MDLabel:
            id: date_text
            text: "Зараз"
            adaptive_size: True
            color: "grey"
            pos_hint: {"center_x":0.5}
            font_style: 'Caption'
        MDLabel:
            id: desc_text
            text: "Тут буде погода...."
            adaptive_size: True
            color: "grey"
            pos_hint: {"center_x":0.5}
            font_style: 'H5'
            bold: True
        AsyncImage:
            id: weather_icon
            pos_hint: {"center_x":0.5}
            source: "https://openweathermap.org/img/wn/10d@2x.png"
            size_hint: (None, None)
            height: "100sp" 
            width: "100sp" 
            fit_mode: 'contain'
        MDLabel:
            id: temp_text
            text: "21°C"
            adaptive_size: True
            color: "grey"
            pos_hint: {"center_x":0.5}
            font_style: 'H4'
        MDLabel:
            id: rain_text
            text: "Ймовірність опадів: 20%"
            adaptive_size: True
            color: "grey"
            pos_hint: {"center_x":0.5}
        MDLabel:
            id: wind_text
            text: "Швидкість вітру: 20 м/c"
            adaptive_size: True
            color: "grey"
            pos_hint: {"center_x":0.5}


<MainScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"
        MDTopAppBar:
            title: "My WeatherApp"
            right_action_items: [["message-alert-outline", lambda x: root.show_about_dialog()]]
        MDBoxLayout:
            padding: "25sp"
            size_hint: (1, 0.8)
            pos_hint: {"center_x": 0.5}
            orientation: 'vertical'
            spacing: "20sp"
            MDBoxLayout:
                size_hint: 1, None
                height: "40sp"
                orientation: 'horizontal'
                spacing: "20sp"
                MDTextField:
                    id: city_field
                    hint_text: "Введіть місто"
                    mode: "fill"
                MDIconButton:
                    id: search_btn
                    icon: "magnify"
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.weather_search()
            MDCarousel:
                id: weather_carousel
                direction: 'right'
                size_hint: 1, 0.8
            

        


