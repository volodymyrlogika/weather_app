<WeatherCard>
    padding: 4
    size_hint: 0.9, 0.8

    MDRelativeLayout:
        MDLabel:
            id: label
            text: "Тут буде погода"
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True


<MainScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"
        MDTopAppBar:
            title: "My WeatherApp"
            left_action_items: [["menu", lambda x: app.callback()]]
        MDBoxLayout:
            padding: "25sp"
            size_hint: (1, 0.8)
            pos_hint: {"center_x": 0.5}
            orientation: 'vertical'
            spacing: "20sp"
            MDBoxLayout:
                size_hint: 1, None
                height: "40sp"
                orientation: 'horizontal'
                spacing: "20sp"
                MDTextField:
                    id: city_field
                    hint_text: "Введіть місто"
                    mode: "fill"
                MDIconButton:
                    id: search_btn
                    icon: "magnify"
                    md_bg_color: app.theme_cls.primary_color
                    on_press: root.weather_search()
            WeatherCard:
                id: weather_card
            

        


